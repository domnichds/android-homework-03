<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_library_item"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/ll_card_root"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_card_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="3dp"
            tools:srcCompat="@drawable/unknown" />

        <LinearLayout
            android:id="@+id/ll_card_info"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom|right|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_card_item_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="serif"
                android:freezesText="true"
                android:gravity="bottom|top"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_card_item_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:fontFamily="serif"
                android:gravity="bottom|top"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>